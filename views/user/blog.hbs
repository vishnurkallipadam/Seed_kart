	<section class="main container" style="padding-top: 1cm;">
		 <div class="contenedor-botones">
						<a href="/blog/add_blog" class="btn btn-primary">Add BLog</a>
					
					</div>
        <div class="row">
           {{#each blogs}}
			<section class="posts col-md-9">
				<article class="post clearfix">
					<a href="#" class="thumb pull-left">
						<img class="img-thumbnail" src="/blog_images/{{this._id}}.jpg" style="height: 500px; width: 500px" alt="">
					</a>
					<h2 class="post-title">
						<a href="#">{{this.title}}</a>
					</h2>
					<p><span class="post-fecha">{{this.date}}</span> by <span class="post-autor"><a href="#">{{this.author}}</a></span></p>
					<p class="post-contenido text-justify">
						{{this.content}}
					</p>

					<div class="contenedor-botones">
						<button class="btn btn-primary" onclick="myFunction()" id="myBtn">Read more</button>
						<button onclick="addLike('{{this._id}}')" class="btn btn-success">Like<span id="likecount" class="badge">{{this.likecount}}</span></button>
					</div>
				</article>

				

			</section>

			{{/each}}
		</div>
	</section>


    <style>
        .main {
  margin-top: 20px;
  margin-bottom: 20px;
}

.post {
  padding-bottom: 20px;
  margin-bottom: 20px;
  border-bottom: 1px solid #999;
}

.post .post-title a {
  color: #333;
}

.post .thumb {
  margin-right: 10px;
  width: 40%;
}

.post .thumb img {
  width: 100%;
}

.post .contenedor-botones {
  width: 100%;
}

/* -- Media Querie -- */
@media screen and (max-width: 768px) {
  .post .thumb {
    width: 100%;
    margin-bottom: 20px;
    margin-right: 0;
  }
}

    </style>

<script>
	function addLike(blogid){
		$.ajax({
			url:'/addlike/'+blogid,
			method:'GET',
			success:(response)=>{
				if(response.likesuccess){
					let likecount=$('#likecount').html()
					likecount=parseInt(likecount)+1
					$('#likecount').html(likecount)
					alert('liked blog')


				}
				else{
					alert('You Already Liked the Blog')
				}


			}
		})
	}
</script>
   